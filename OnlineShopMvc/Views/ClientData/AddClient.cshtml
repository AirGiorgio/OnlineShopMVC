 
 
<h2>Rejestracja</h2>

 
  @if (TempData["Message"] != null)
    {
        <p>@TempData["Message"]</p>
    }
    <form method="post" action="@Url.Action("RegisterClient", "ClientData")">
        <label for="name">Imię:</label>
        <input type="text" id="name" name="name" />

        <label for="surname">Nazwisko:</label>
        <input type="text" id="surname" name="surname" />

        <label for="email">Email:</label>
        <input type="text" id="email" name="email"/>

        <label for="telephone">Telefon:</label>
        <input type="text" id="telephone" name="telephone" />

        <label for="street">Ulica:</label>
        <input type="text" id="street" name="street" />

        <label for="buildingNumber">Nr budynku:</label>
        <input type="text" id="buildingNumber" name="buildingNumber" />

        <label for="flatNumber">Nr mieszkania:</label>
        <input type="text" id="flatNumber" name="flatNumber"/>

        <label for="city">Miejscowość:</label>
        <input type="text" id="city" name="city" />

        <label for="zipCode">Kod pocztowy:</label>
        <input type="text" id="zipCode" name="zipCode" />
        
         <button type="submit">Zarejestruj</button>
    </form>
    <form method="get" action="@Url.Action("Index", "Home")">
        <button type="submit">Powrót do strony głównej</button>
    </form>
 
